{
    "name": "backend",
    "version": "0.0.1",
    "description": "A backend demo for wiredcraft",
    "scripts": {
        "migrate": "ts-node src/entry/index.ts --migrate",
        "dev": "ts-node src/entry/index.ts --start",
        "watch": "tsc --watch --project tsconfig.json",
        "start": "nodemon dist/entry/index.js",
        "test": "mocha --require ts-node/register src/test/**",
        "lint": "eslint src/** --fix",
        "build": "tsc --build --clean tsconfig.json && tsc --project tsconfig.json",
        "prod": "node dist/entry/index.js"
    },
    "dependencies": {
        "dotenv": "^10.0.0",
        "ioredis": "^4.28.0",
        "log4js": "^6.3.0",
        "pg": "^8.7.1",
        "typescript": "^4.4.4"
    },
    "devDependencies": {
        "@types/ioredis": "^4.28.1",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.11.6",
        "@types/pg": "^8.6.1",
        "@typescript-eslint/eslint-plugin": "^5.3.0",
        "@typescript-eslint/parser": "^5.3.0",
        "eslint": "^8.2.0",
        "mocha": "^9.1.3",
        "nodemon": "^2.0.14",
        "ts-node": "^10.4.0"
    }
}
