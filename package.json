{
  "name": "wc-restful-api",
  "version": "1.0.0",
  "description": "RESTful API using NodeJS, KOA, Typescript and TypeORM (Mongo). Middleware uses JWT, CORS, Winston Logger and Swagger API docs",
  "main": "dist/server.js",
  "scripts": {
    "watch-server": "nodemon --watch src -e ts,tsx --exec ts-node src/server.ts",
    "build-ts": "tsc",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "serve": "node dist/server.js",
    "build": "npm run lint && npm run index && npm run build-ts && npm run copy-static-assets",
    "start": "npm run serve",
    "test": "cross-env NODE_ENV=test TS_NODE_FILES=true mocha --timeout 5000 --exit --require ts-node/register --colors test/**/*.spec.ts",
    "lint": "tsc --noEmit && eslint \"**/*.ts\" --quiet --fix",
    "coverage": "nyc npm run test",
    "index": "cat README.md | npx marked -o public/readme.html"
  },
  "engines": {
    "node": "12.x.x",
    "npm": "6.x.x"
  },
  "author": "Emmanuel Nsubuga Kyeyune",
  "license": "MIT",
  "homepage": "https://github.com/emmanuelnk/wc-restful-api#readme",
  "keywords": [
    "typescript",
    "koa",
    "koa2",
    "jwt",
    "winston",
    "boilerplate",
    "typeORM",
    "class-validator",
    "helmet",
    "sql",
    "api rest",
    "heroku",
    "cors",
    "github actions"
  ],
  "repository": "github:emmanuelnk/wc-restful-api",
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/chai-json-schema": "^1.4.6",
    "@types/cron": "^1.7.2",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "2.0.49",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa__cors": "^3.0.1",
    "@types/koa__router": "^8.0.2",
    "@types/mocha": "^8.0.3",
    "@types/mongodb": "^3.5.31",
    "@types/node": "^12.12.6",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "chai": "^4.2.0",
    "chai-json-schema": "^1.5.1",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^10.4.2",
    "mocha": "^8.2.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "supertest": "^5.0.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "@koa/router": "^8.0.8",
    "@types/bcryptjs": "^2.4.2",
    "@types/find-root": "^1.1.2",
    "@types/koa-ratelimit": "^4.2.2",
    "@types/koa-send": "^4.1.2",
    "@types/lodash": "^4.14.162",
    "@types/shelljs": "^0.8.8",
    "ajv": "^7.0.0-beta.2",
    "ajv-formats": "^0.4.0",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.11.1",
    "dotenv": "^8.2.0",
    "find-root": "^1.1.0",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^5.2.0",
    "koa-jwt": "^3.6.0",
    "koa-ratelimit": "^4.2.1",
    "koa-send": "^5.0.1",
    "koa-swagger-decorator": "^1.5.16",
    "lodash": "^4.17.20",
    "marked": "^1.2.2",
    "mongodb": "^3.6.2",
    "reflect-metadata": "^0.1.13",
    "shelljs": "^0.8.4",
    "tedis": "^0.1.12",
    "typeorm": "^0.2.24",
    "winston": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix"
    ]
  }
}
