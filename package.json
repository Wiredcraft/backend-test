{
  "name": "koa-rest-admin",
  "version": "1.0.0",
  "description": "koa restful api server",
  "main": "index.js",
  "author": "Leo",
  "license": "MIT",
  "scripts": {
    "test": "npm run lint && npm run compile && npm run jest",
    "lint": "eslint src/. test/. --config .eslintrc.json --ext .ts --fix",
    "dev": "ts-node-dev --no-notify src/",
    "start": "npm run compile && node lib/",
    "jest": "jest --forceExit",
    "jest-coverage": "jest --forceExit --coverage",
    "lint-staged": "lint-staged",
    "compile": "shx rm -rf lib/ && tsc",
    "doc": "apidoc ./src/services/*.service.ts ./src/middleware/statisticsTime.middleware.ts -o ./doc/api"
  },
  "dependencies": {
    "@koa/cors": "^3.3.0",
    "@koa/router": "^10.1.1",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "bcryptjs": "^2.4.3",
    "config": "^3.3.7",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.0.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.4",
    "koa-body": "^5.0.0",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-onerror": "^4.2.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.3",
    "mongoose": "^6.3.1",
    "supertest": "^6.2.3",
    "uuid": "^8.3.2",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@types/apidoc": "^0.50.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "0.0.41",
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.7",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/koa": "^2.13.4",
    "@types/koa__cors": "^3.3.0",
    "@types/koa__router": "^8.0.11",
    "@types/koa-bodyparser": "^4.3.7",
    "@types/koa-static": "^4.0.2",
    "@types/lodash": "^4.14.182",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/parser": "^5.21.0",
    "apidoc": "^0.51.1",
    "eslint": "^8.14.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.4.1",
    "npm": "^8.7.0",
    "shx": "^0.3.4",
    "ts-jest": "^27.1.4",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "**/*.less": "stylelint --syntax less",
    "**/*.{js,jsx,ts,tsx}": "npm run lint-staged:js",
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write"
    ]
  }
}
